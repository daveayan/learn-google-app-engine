<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>GuestBook</servlet-name>
		<servlet-class>guestbook.GuestBookServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>guestbook.SignGuestbookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>email</servlet-name>
        <servlet-class>guestbook.EmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emailqueueservlet</servlet-name>
        <servlet-class>guestbook.EmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>emailqueue</servlet-name>
        <servlet-class>guestbook.EmailQueue</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>GuestBook</servlet-name>
		<url-pattern>/guestbook</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>email</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emailqueueservlet</servlet-name>
        <url-pattern>/emailqueueservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>emailqueue</servlet-name>
        <url-pattern>/emailqueue</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
        <welcome-file>guestbook.jsp</welcome-file>
    </welcome-file-list>
</web-app>
